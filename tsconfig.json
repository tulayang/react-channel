{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "target": "es5",
    "lib": ["es6", "dom"],
    "downlevelIteration": true,
    "jsx": "react",
    "noImplicitAny": true,
    "sourceMap": true
  },
  "exclude": [
    "node_modules", "dist"
  ]
}

